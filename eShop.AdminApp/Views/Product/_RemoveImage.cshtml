@model List<eShop.ViewModel.Catalog.ProductImages.ProductImageViewModel>
@inject Microsoft.Extensions.Configuration.IConfiguration _config
@{
    var productId = (int)ViewData["ProductId"];
    var baseAddress = _config[SystemConstant.AppSetting.BaseAddress];
    string modalSize;
    if (Model.Count > 0) modalSize = "modal-xl";
    else modalSize = "modal-sm";
}

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog @modalSize">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-image" viewBox="0 0 16 16">
                        <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                        <path d="M1.5 2A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13zm13 1a.5.5 0 0 1 .5.5v6l-3.775-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12v.54A.505.505 0 0 1 1 12.5v-9a.5.5 0 0 1 .5-.5h13z" />
                    </svg>
                    Xóa ảnh
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form enctype="multipart/form-data" id="createForm" asp-action="RemoveImage" asp-controller="Product" method="post">
                <input type="hidden" name="productId" value="@productId" />
                <div class="row m-3">
                    @{
                        if (Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="col-md-2 mb-4" style="position:relative;">
                                    <label for="@($"images[{i}].Selected")">
                                        <img src="@(baseAddress + Model[i].ImagePath)" alt="Alternate Text" class="img-thumbnail" style="width: 200px; height: 200px; object-fit: contain;" />
                                    </label>

                                    <input type="hidden" name="@($"images[{i}].Id")" value="@Model[i].Id" />
                                    <input type="checkbox" name="@($"images[{i}].Selected")" value="true" id="@($"images[{i}].Selected")" style="position:absolute;top:10px;right:20px;"/>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="align-items-mid">
                                <p class="text-center">
                                    Sản phẩm chưa có ảnh
                                </p>
                            </div>
                        }
                    }

                </div>
                <div class="modal-footer justify-content-center">
                    @{
                        if (Model.Count > 0)
                        {
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                        }
                    }

                </div>
            </form>
        </div>
    </div>
</div>