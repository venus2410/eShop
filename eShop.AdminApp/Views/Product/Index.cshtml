@using eShop.ViewModel.System.Languages
@using eShop.ViewModel.Catalog.Catergories
@model eShop.ViewModel.Catalog.Common.PageResult<eShop.ViewModel.Catalog.Products.ProductVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var languages = ViewBag.Languages as List<LanguageVM>;
    var catergories = ViewBag.Catergories as List<CatergoryVM>;
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-success" id="create" onclick="loadCreatModal()">

                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                        </svg>
                        Tạo mới
                    </button>
                </div>
                <div class="col-md-10">
                    <div class="row justify-content-between">
                        <div class="col-md-2">
                            <select class="form-select w-auto" aria-label="Default select example" name="pagesize" id="pageSizeSelect">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select class="form-select w-auto" aria-label="Default select   example" name="languageId" id="languageIdSelect" asp-items="new SelectList(languages,nameof(LanguageVM.Id),nameof(LanguageVM.Name))">
                                <option value="" selected>Tất cả ngôn ngữ </option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select class="form-select w-auto" aria-label="Default select   example" name="catergoryId" id="catergoryIdSelect" asp-items="new SelectList(catergories,nameof(CatergoryVM.Id),nameof(CatergoryVM.Name))">
                                <option value="" selected>Tất cả danh mục</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex justify-content-end">
                            <div class="d-flex">
                                <div class="input-group">
                                    <div class="form-outline">
                                        <input type="search" id="keywordTextBox" class="form-control" />
                                    </div>
                                    <button id="search-button" type="button" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            
        </div>
        <div class="card-body table-responsive" id="tableData">
            @await Component.InvokeAsync("ProductTable", Model)
        </div>
    </div>
</div>

<!--Modal-->
<!-- Button trigger modal -->
<div id="modalHere">

</div>

<!-- Modal -->
@section Scripts{
    <script src="~/js/bootbox.min.js"></script>

    <script>
        //create
        function loadCreatModal() {
            $(this).off('click');
            $.ajax({
                url: '@Url.Action("Create","Product")',
                success: function (data) {
                    $("#modalHere").html(data);
                    $("#exampleModal").modal('show');
                }
            });
        }
        function create() {
            if ($("#createForm").valid()) {
                var eles = $(".tab-pane");
                var translations = [];
                eles.each(function (index, element) {
                    var object = {
                        Name:$(element).find("#Name").val(),
                        Description:$(element).find("#Description").val(),
                        Details:$(element).find("#Details").val(),
                        SeoDescription:$(element).find("#SeoDescription").val(),
                        SeoTitle:$(element).find("#SeoTitle").val(),
                        SeoAlias:$(element).find("#SeoAlias").val(),
                        LanguageId:$(element).find("#LanguageId").val()
                    };
                    translations.push(object);
                });
                console.log(JSON.stringify(translations));
                var formData = new FormData($('#createForm').get(0));
                //var prices = {
                //    Price: $('#Price').val(),
                //    OriginalPrice: $('#OriginalPrice').val()
                //};
                //formData.append('Prices.Price', $('#Price').val().toString());
                //formData.append('Prices.OriginalPrice', $('#OriginalPrice').val().toString());
                //formData.append('Stock', $('#Stock').val());
                //formData.append('Translations', translations);


                var file = document.getElementById("ThumbnailImage").files[0];
                formData.append('ThumbnailImage', file);

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create","Product")',
                    contentType: false,
                    processData: false,
                    cache:false,
                    data: formData,
                    dataType: 'json',
                    success: function (result) {
                        /*alert(JSON.stringify(result));*/
                        if (result.isSucceed == true) {
                            $("#exampleModal").modal('hide');
                            alertForm("Tạo mới thành công");
                            setInterval(function () {
                                location.reload();
                            }, 2000);
                        }
                        else {
                            bootbox.alert(result.errors);
                        }
                    },
                    error: function () {
                        bootbox.alert('Failed to receive the Data');
                    }
                });

            }
        }
        //update
        function loadUpdateModal(id) {
            $.ajax({
                url: '@Url.Action("Update","User")',
                data: {id:id},
                success: function (data) {
                    $("#modalHere").html(data);
                    $("#exampleModal").modal('show');
                }
            });
        }
        function updateUser() {
            if ($("#updateForm").valid()) {
                var data = $("#updateForm").serialize();
        //console.log(data);
        //alert(data);
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Update","User")',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
                    data: data,
                    dataType: 'json',
                    async: false,
                    success: function (result) {
                        /*alert(JSON.stringify(result));*/
                        if (result.isSucceed == true) {
                            $("#exampleModal").modal('hide');

                            alertForm("Cập nhật thành công");
                            setInterval(function () {
                                location.reload(true);
                            }, 2000);
                        }
                        else {
                            bootbox.alert(result.errors);
                        }
                    },
                    error: function () {
                        alert('Failed to receive the Data');
                    }
                });
            }

        }
        //delete
        function deleteUser(id) {
            $.ajax({
                url:'@Url.Action("Delete","User")',
                method: "Post",
                data: { id: id },
                async:false,
                success: function (data) {
                    if (data.isSucceed == true) {
                        alertForm("Xóa thành công");
                        setInterval(function () {
                            location.reload();
                        }, 2000);
                    }
                    else {
                        bootbox.alert(data.errors);
                    }
                },
                error: function () {
                    bootbox.alert("Xóa không thành công!");
                }
                });
        }
        function getPaging(pageIndex=1) {
            var keyword = $('#keywordTextBox').val();
            var pageSize = $('#pageSizeSelect').val();
            var languageId = $('#languageIdSelect').val();
            var catergoryId = $('#catergoryIdSelect').val();
            $.ajax({
                url: '@Url.Action("GetProductPaging", "Product")',
                data: {
                    keyword: keyword,
                    pageIndex: pageIndex,
                    pageSize: pageSize,
                    languageId: languageId,
                    categoryId: catergoryId
                },
                success: function (data) {
                    $("#tableData").html(data);
                }
            });
        }
        function alertForm(message) {
            $("#alertDiv").text(message).fadeIn("slow").delay(3000).fadeOut("slow");
        }
        //for search
        $("#pageSizeSelect").on('change', function () {
            getPaging();
        });
        $("#catergoryIdSelect").on('change', function () {
            getPaging();
        });
        $("#languageIdSelect").on('change', function () {
            getPaging();
        });
        $("#search-button").on('click', function () {
            getPaging();
        });
        $(document).on('click', '.page-link', function () {
                var pageIndex = $(this).data("pageindex");
                getPaging(pageIndex);
            });

        //for edit
        $(document).on('click', '.btn-edit', function () {
                var id = $(this).data('id');
                loadUpdateModal(id);
        });
        //dor delete
        $(document).on('click', '.btn-delete', function () {
                var id = $(this).data('id');
                bootbox.confirm("Bạn chắc chắn muốn xóa?", function (result) {
                    if (result) {
                        deleteUser(id);
                    }
                });
            });
    </script>
}