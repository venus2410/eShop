                                        </svg>
                                    </button>
                                    <button class="btn btn-outline-danger btn-removeimage" data-id="@item.Id">
                                        <!--Remove images-->
                                        <?xml version="1.0" encoding="utf-8" ?>
                                        <!-- Uploaded to: SVG Repo, www.svgrepo.com, Generator: SVG Repo Mixer Tools -->
