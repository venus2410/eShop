@using eShop.ViewModel.System.Users
@using eShop.ViewModel.Catalog.Common
@model PageResult<eShop.ViewModel.Catalog.Products.ProductVM>

@{ 
    var cultureInfor = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<div class="row">
    @if (TempData["Message"] != null)
    {
        <div id="msgAlert" class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
</div>
@if (Model.Items.Count > 0)
{
    <div class="table-responsive" style="height:500px;">
        <table class="table">
            <thead class="position-sticky top-0" style="z-index:10;background-color:white;">
                <tr>
                    <th scope="col">
                        ID
                    </th>
                    <th scope="col">
                        Price
                    </th>
                    <th scope="col">
                        OriginalPrice
                    </th>
                    <th scope="col">
                        Stock
                    </th>
                    <th scope="col">
                        ViewCount
                    </th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        SeoAlias
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @String.Format(cultureInfor, "{0:c0}", item.Price)
                        </td>
                        <td>
                            @String.Format(cultureInfor, "{0:c0}", item.OriginalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ViewCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SeoAlias)
                        </td>

                        <td width="20%">
                            <div class="row">
                                <div class="col">
                                    <button class="btn btn-outline-primary btn-edit" @*onclick="loadUpdateModal('@item.Id')"*@ data-id="@item.Id">
                                        <!--Edit icon-->
