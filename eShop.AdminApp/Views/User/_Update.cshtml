@model eShop.ViewModel.System.Users.UserUpdateRequest
@{
    var roles = Model.Roles;
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/bootbox.min.js"></script>

<script type="text/javascript">

    jQuery(document).ready(function () {
        var role = document.getElementById('@nameof(Model.Roles)');
        var roleSelect=document.getElementById('roleSelect');
        document.addEventListener("click", function (event) {
            if (!role.contains(event.target) && $('#roleSelect').has(event.target).length === 0) {
                roleSelect.style.display = 'none';
            }
        });
        $('#Roles').on('click', function () {
            roleSelect.style.display = 'block';
        });

        $('[name^="Roles"][name$="Selected"]').change(function () {
            var name = $(this).siblings('[name^="Roles"][name$="Name"]').val();
            if (this.checked) {
                $('#roleContainer').prepend(' <span class="badge bg-primary">' + name + '</span> ');
            }
            else {
                $("#roleContainer>span").filter(function () {
                    // Matches exact string
                    return $(this).text() === name;
                }).remove();
            }
        });
    });

</script>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>
                    Cập nhật
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="updateForm" asp-action="Update" asp-controller="User">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dob" class="control-label"></label>
                        <input asp-for="Dob" class="form-control" />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Roles" class="control-label"></label>
                        <div class="form-control d-flex flex-wrap" id="roleContainer">
                            @foreach (var role in roles)
                            {
                                if (role.Selected)
                                {
                                    <span class="badge bg-primary">@role.Name</span>
                                }
                            }
                            <input class="" id="@nameof(Model.Roles)" style="border: none; margin: 0; padding: 0; outline:none;" />
                        </div>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                        <ul class="list-group" style="position:absolute;display:none;" id="roleSelect">
                            @for (var i = 0; i < roles.Count; i++)
                            {
                                <li class="list-group-item w-100">
                                    <div class="form-check">
                                        <label>
                                            @roles[i].Name
                                            <input class="form-check-input" type="checkbox" name="Roles[@i].Selected" data-val="true" value="true" @(roles[i].Selected ? "checked" : "") />
                                            <input type="hidden" name="Roles[@i].Id" value="@roles[i].Id" />
                                            <input type="hidden" name="Roles[@i].Name" value="@roles[i].Name" />
                                        </label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>
        </div>

    </div>
</div>
