
@model eShop.ViewModel.System.Users.UserCreateRequest
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc
@{
    var roles = ViewBag.Roles as List<eShop.ViewModel.System.Roles.RoleVM>;
}

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">

    jQuery(document).ready(function () {
        var role = document.getElementById('@nameof(Model.Roles)');
        var roleSelect=document.getElementById('roleSelect');
        document.addEventListener("click", function (event) {
            if (!role.contains(event.target) && $('#roleSelect').has(event.target).length === 0) {
                roleSelect.style.display = 'none';
            }
        });
        $('#Roles').on('click', function () {
            roleSelect.style.display = 'block';
        });

        $('[name^="Roles"][name$="Selected"]').change(function () {
            var name = $(this).siblings('[name^="Roles"][name$="Name"]').val();
            if (this.checked) {
                $('#roleContainer').prepend(' <span class="badge bg-primary">' + name + '</span> ');
            }
            else {
                $("#roleContainer>span").filter(function () {
                    // Matches exact string   
                    return $(this).text() === name;
                }).remove();
            }
        });
    });

</script>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                        <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                    </svg>
                    Tạo mới
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createForm" asp-action="Create" asp-controller="User" method="post">
                <div class="modal-body">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group m-3">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" type="text"/>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control"/>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="Dob" class="control-label"></label>
                                <input asp-for="Dob" class="form-control"/>
                                <span asp-validation-for="Dob" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group m-3">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control"/>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control"/>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control"/>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3">
                                <label asp-for="Roles" class="control-label"></label>
                                <div class="form-control d-flex flex-wrap" id="roleContainer">
                                    <input class="" id="@nameof(Model.Roles)" style="border: none; margin: 0; padding: 0; outline:none;" />
                                </div>
                                <span asp-validation-for="Roles" class="text-danger"></span>
                                <ul class="list-group" style="position:absolute;display:none;" id="roleSelect">
                                    @for (var i = 0; i < roles.Count; i++)
                                    {
                                        <li class="list-group-item w-100">
                                            <div class="form-check">
                                                <label>
                                                    @roles[i].Name
                                                    <input class="form-check-input" type="checkbox" name="Roles[@i].Selected" data-val="true" value="true" />
                                                    <input type="hidden" name="Roles[@i].Id" value="@roles[i].Id" />
                                                    <input type="hidden" name="Roles[@i].Name" value="@roles[i].Name" />
                                                </label>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @*<div class="form-group">
                        <label class="control-label">Role(s):</label>
                        <div class="d-flex justify-content-between">
                            @for (var i = 0; i < roles.Count; i++)
                            {
                                <div class="form-check form-switch">
                                    <label>
                                        @roles[i].Name
                                        <input class="form-check-input" type="checkbox" name="Roles[@i].Selected" data-val="true" value="true" />
                                        <input type="hidden" name="Roles[@i].Id" value="@roles[i].Id" />
                                        <input type="hidden" name="Roles[@i].Name" value="@roles[i].Name" />
                                    </label>
                                </div>
                            }
                        </div>
                    </div>*@
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Tạo mới</button>
                </div>
            </form>
        </div>
    </div>
</div>
