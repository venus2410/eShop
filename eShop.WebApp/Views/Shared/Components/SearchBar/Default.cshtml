@model List<eShop.ViewModel.Catalog.Catergories.CatergoryVM>

@{
    var culture = CultureInfo.CurrentCulture.Name;
    var categoryId = TempData["CategoryId"];
    var keyword = TempData["Keyword"];
}
<form class="form-inline navbar-search" method="get" action="/@culture/Product/Search">
    <input id="" class="srchTxt" type="text" name="keyword" value="@(keyword??"")"/>
    <select class="srchTxt" name="categoryId">
        @if (categoryId != null)
        {
            @foreach (var item in Model)
            {
                if (item.Id != (int)categoryId)
                {
                    <option value="@item.Id">@item.Name</option>
                }
                else
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
            }
        }
        else
        {
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Name</option>
            }
        }

    </select>
    <button type="submit" id="submitButton" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
        </svg>
        @*<img src="../themes/images/search.png" alt="Alternate Text" />*@
    </button>
</form>